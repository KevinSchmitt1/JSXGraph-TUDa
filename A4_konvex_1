var board = JXG.JSXGraph.initBoard(divid, {boundingbox: [-3, 5, 8, -3], axis:false, showCopyright:false}); 
var xaxis = board.createElement('functiongraph', [function() {return 1}], {strokeColor:'black', dash:2, name:'Optische Achse'}); 
