var f = board.createElement('functiongraph', [f1,1.9,2.1]);
var g1 = board.jc.snippet('{#gx#}', true, 'x', true);
var g = board.createElement('functiongraph', [g1,1.9,2.1]);
var lens = board.createElement('text', [1.68,-0.3,'Linse']); 
